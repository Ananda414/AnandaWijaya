<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_palembang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Palembang Water"
        android:textColor="#FAF3F3"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="500dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tv_kualitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menyediakan air bersih, sehat dan terjaga kualitasnya"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_palembang"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#C1AB32"
        android:text="SIGN UP"
        app:iconTint="#E1D2D2"
        app:layout_constraintTop_toBottomOf="@+id/tv_kualitas"
        android:layout_marginHorizontal="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_corner"
        android:text="LOGIN"
        app:iconTint="#E1D2D2"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/tv_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit us"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_corner"
        android:text="WWW.PALEMBANG.GO.ID"
        app:iconTint="#E1D2D2"
        app:layout_constraintTop_toBottomOf="@+id/tv_visit"
        android:layout_marginHorizontal="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>