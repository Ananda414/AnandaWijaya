<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:layout_marginTop="132dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_create_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your new account"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_new_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:drawableStart="@drawable/ic_person_24"
        android:inputType="text"
        android:drawableTint="#1565C0"
        android:hint="Nama"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#0FC7E6"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/et_negara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:drawableTint="#2E7D32"
        android:hint="Negara"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_negara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:drawableStart="@drawable/ic_email_24"
        android:inputType="text"
        android:drawableTint="#2E7D32"
        android:hint="Email"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:inputType="textPassword"
        android:drawableTint="#2E7D32"
        android:hint="Password"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:drawableStart="@drawable/ic_lock_24"
        android:inputType="textPassword"
        android:drawableTint="#2E7D32"
        android:hint="Confirm Password"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#0FE6C8"
        android:padding="12dp"
        android:drawablePadding="8dp"
        android:layout_marginTop ="32dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_up_register"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="sans-serif"
        android:textSize="17sp"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:backgroundTint="#0D44B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>